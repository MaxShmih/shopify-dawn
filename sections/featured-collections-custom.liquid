<link rel="stylesheet" href="{{ 'collection-custom.css' | asset_url }}">

<section class="page-width featured-collections-custom" id="Shopify-section-{{ section.id }}">
  <h2 class="featured-collections-custom__title">{{ section.settings.heading }}</h2>
  <div class="featured-collections-custom__grid collections-grid">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        {% assign collection = block.settings.collection %}
        {% if collection != blank %}
          <div class="featured-collections-custom__card collection-item" {{ block.shopify_attributes }}>
            <div class="featured-collections-custom__image-wrap">
              {% if collection.image != blank %}
                <img
                  class="featured-collections-custom__image"
                  src="{{ collection.image | image_url: width: 400 }}"
                  alt="{{ collection.title | escape }}"
                  width="400"
                  height="{{ 400 | divided_by: collection.image.aspect_ratio | round }}"
                  loading="lazy"
                >
              {% else %}
                {% assign placeholder_index = forloop.index0 | modulo: 4 | plus: 1 %}
                {{
                  'collection-apparel-'
                  | append: placeholder_index
                  | placeholder_svg_tag: 'featured-collections-custom__placeholder placeholder-svg'
                }}
              {% endif %}
            </div>
            <div class="collection-info featured-collections-custom__info">
              <a class="collection-link featured-collections-custom__link" href="{{ collection.url }}">
                {{- collection.title -}}
              </a>
              <p class="featured-collections-custom__count">{{ collection.products_count }} products</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
</section>

{% comment %} style the grid gaps based on settings {% endcomment %}
<style>
  #Shopify-section-{{ section.id }} .collections-grid {
    grid-row-gap: {{ section.settings.row_gap }}px;
    grid-column-gap: {{ section.settings.column_gap }}px;
  }
</style>

{% schema %}
{
  "name": "Collections Custom",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collections"
    },
    {
      "type": "range",
      "id": "row_gap",
      "label": "Row gap",
      "default": 5,
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "column_gap",
      "label": "Column gap",
      "default": 5,
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Featured Collections Custom",
      "category": "Custom"
    }
  ]
}
{% endschema %}
